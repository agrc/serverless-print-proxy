{
  "name": "serverless-print-proxy",
  "version": "1.1.0",
  "description": "A Google Cloud Function for switching out quad words in print requests to ArcGIS Server",
  "repository": "https://github.com/agrc/serverless-print-proxy",
  "license": "MIT",
  "author": "Scott Davis <stdavis@utah.gov>",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "format": "prettier . --write",
    "lint": "eslint *.js",
    "start": "NODE_ENV=development node index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 80000,
    "transform": {}
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "got": "^12.3.1"
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.5.0",
    "eslint": "^8.21.0",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "supertest": "^6.2.4"
  }
}
